<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lay_pages"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <softuvo.com.navigationdrawerbothsides.Views.RoundedImageView
        android:id="@+id/iv_group_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:scaleType="center"
        android:src="@drawable/ic_group"
        app:layout_constraintBottom_toBottomOf="@+id/tv_page_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/vertical25"
        app:layout_constraintTop_toTopOf="@+id/tv_pages_title"
        app:riv_border_width="2dp"
        app:riv_corner_radius="8dp"
        app:riv_oval="false" />

    <android.support.constraint.Guideline
        android:id="@+id/vertical25"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <TextView
        android:id="@+id/tv_pages_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:text="Lux Motor Inc"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/vertical25"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_page_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="1dp"
        android:paddingTop="1dp"
        android:text="Automotive"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/vertical25"
        app:layout_constraintTop_toBottomOf="@+id/tv_pages_title" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/like"
        android:paddingBottom="1dp"
        android:paddingTop="1dp"
        android:text="5"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_page_type"
        app:layout_constraintLeft_toRightOf="@+id/tv_page_type"
        app:layout_constraintTop_toBottomOf="@+id/tv_pages_title"
        app:layout_constraintTop_toTopOf="@+id/tv_page_type" />

    <TextView
        android:id="@+id/tv_page_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="1dp"
        android:paddingTop="1dp"
        android:text="we are specialized dealer"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/vertical25"
        app:layout_constraintTop_toBottomOf="@+id/tv_page_type" />


    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/divider_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_page_content" />
</android.support.constraint.ConstraintLayout>