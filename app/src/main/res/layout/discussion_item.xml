<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_message"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/vertical25"
        app:layout_constraintTop_toTopOf="@+id/tv_title"
        app:layout_constraintBottom_toBottomOf="@+id/tv_posts"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:paddingTop="8dp"
        android:text="General"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/vertical25"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_threads"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="1dp"
        android:text="16 threads"
        app:layout_constraintLeft_toLeftOf="@+id/vertical25"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_posts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:paddingBottom="8dp"
        android:paddingTop="1dp"
        android:text="2 Posts"
        app:layout_constraintLeft_toRightOf="@+id/tv_threads"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <android.support.constraint.Guideline
        android:id="@+id/vertical25"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

</android.support.constraint.ConstraintLayout>