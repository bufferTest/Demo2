<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_quize"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <softuvo.com.navigationdrawerbothsides.Views.RoundedImageView
        android:id="@+id/iv_group_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="13dp"
        android:scaleType="center"
        android:src="@drawable/ic_group"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_border_width="3dp"
        app:riv_corner_radius="10dp"
        app:riv_oval="false" />

    <TextView
        android:id="@+id/tv_group_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="rtggf"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/iv_group_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_group_icon" />

    <TextView
        android:id="@+id/tv_members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="by: deep"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_group_icon"
        app:layout_constraintTop_toBottomOf="@id/tv_group_title" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/info_layout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_group_icon"
        app:layout_constraintLeft_toRightOf="@+id/iv_group_icon"
        app:layout_constraintTop_toBottomOf="@id/tv_members">

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableRight="@drawable/ic_group"
            android:text="5  "
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/info_layout" />

        <TextView
            android:id="@+id/tv_count1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableRight="@drawable/ic_group"
            android:text="0  "
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_count" />

        <TextView
            android:id="@+id/tv_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="top"
            android:text=" ."
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_count1" />

        <TextView
            android:id="@+id/tv_count3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="top"
            android:text="2 months"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_dot" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tv_quize_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="top"
        android:text="2 months"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/iv_group_icon"
        app:layout_constraintTop_toBottomOf="@+id/iv_group_icon" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/fab_margin"
        android:background="@color/divider_color"
        app:layout_constraintTop_toBottomOf="@+id/tv_quize_type" />
</android.support.constraint.ConstraintLayout>