<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_quize"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <softuvo.com.navigationdrawerbothsides.Views.RoundedImageView
        android:id="@+id/iv_group_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:scaleType="center"
        android:src="@drawable/ic_group"
        app:layout_constraintBottom_toBottomOf="@+id/tv_count"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/vertical25"
        app:layout_constraintTop_toTopOf="@+id/tv_group_title"
        app:riv_border_width="2dp"
        app:riv_corner_radius="8dp"
        app:riv_oval="false" />

    <android.support.constraint.Guideline
        android:id="@+id/vertical25"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <TextView
        android:id="@+id/tv_group_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:text="Quiz1"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/vertical25"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="1dp"
        android:paddingTop="1dp"
        android:text="by: deep"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/vertical25"
        app:layout_constraintTop_toBottomOf="@+id/tv_group_title" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_group"
        android:paddingBottom="1dp"
        android:paddingTop="1dp"
        android:text="5"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/vertical25"
        app:layout_constraintTop_toBottomOf="@+id/tv_members" />

    <TextView
        android:id="@+id/tv_count1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_group"
        android:paddingBottom="1dp"
        android:paddingTop="1dp"
        android:text="0"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/tv_count"
        app:layout_constraintTop_toBottomOf="@+id/tv_members" />

    <TextView
        android:id="@+id/tv_count3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="top"
        android:paddingBottom="1dp"
        android:paddingTop="1dp"
        android:text="2 months"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/tv_count1"
        app:layout_constraintTop_toBottomOf="@+id/tv_members" />

    <TextView
        android:id="@+id/tv_quize_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:padding="3dp"
        android:text="2 months"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="@+id/vertical25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_count" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/divider_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_quize_type" />
</android.support.constraint.ConstraintLayout>